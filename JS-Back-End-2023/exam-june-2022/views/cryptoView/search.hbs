<main>
    <section class="crypto-search">
        <h1>Search</h1>

        <form class="search-form"  method="post">
            <input type="text" class="search-coin" name="searchValue" placeholder="Search here...">
            <select id="payment" name="paymentMethod">
                <option value="crypto-wallet">Crypto Wallet</option>
                <option value="credit-card">Credit Card</option>
                <option value="debit-card">Debit Card</option>
                <option value="paypal">PayPal</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        <div class="search-result">
            <div class="search-list">
                {{#if crypto}}
                {{#each crypto}}
                <div class="coin">
                    <div class="coin-img">
                        <img src="{{this.image}}">
                    </div>
                    <div class="coin-info">
                        <h1>{{this.name}}</h1>
                        <p><span>Price: </span>${{this.price}}</p>
                        <p><span>Payment: </span>{{this.paymentMethod}}</p>
                    </div>

                    <a href="/crypto/{{this._id}}/details" class="btn-details">Details</a>
                </div>
                {{/each}}
                
            </div>

        </div>
            {{else}}
         <div class="no-match">
                <p>No match was found!</p>
            </div> 
            {{/if}}
    </section>
</main>